<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Juice Shop tests on Selenium Grid 4" parallel="tests" thread-count="3" verbose="2">
    <test name="Juice Shop end to End automation tests on Remote Chrome ">
        <parameter name="browser" value="remote_chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.juiceshop.JuiceShopTests">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testLogin"/>
                    <include name="testAddProductToCart"/>
                    <include name="testProductCheckout"/>
                    <include name="testSelectDelivery"/>
                    <include name="testMakePayment"/>
                    <include name="testOrderSummary"/>
                    <include name="testOrderConfirmation"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->

    <test name="Juice Shop end to End automation tests on Remote Firefox ">
        <parameter name="browser" value="remote_firefox"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.juiceshop.JuiceShopTests">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testLogin"/>
                    <include name="testAddProductToCart"/>
                    <include name="testProductCheckout"/>
                    <include name="testSelectDelivery"/>
                    <include name="testMakePayment"/>
                    <include name="testOrderSummary"/>
                    <include name="testOrderConfirmation"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
    <test name="Juice Shop end to End automation tests on Remote Edge">
        <parameter name="browser" value="remote_edge"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.juiceshop.JuiceShopTests">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testLogin"/>
                    <include name="testAddProductToCart"/>
                    <include name="testProductCheckout"/>
                    <include name="testSelectDelivery"/>
                    <include name="testMakePayment"/>
                    <include name="testOrderSummary"/>
                    <include name="testOrderConfirmation"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
</suite>