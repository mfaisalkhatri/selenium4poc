<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Lambdatest e-commerce Website Tests " verbose="2">
    <test name="selenium 4 Tests on Lambdatest ecommerce Website">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.lambdatestecommerce.EndToEndWebsiteTests">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testAddProductToCart"/>
                    <include name="testCheckoutProduct"/>
                    <include name="testConfirmOrder"/>
                    <include name="testOrderSuccess"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
    <test name="selenium 4 Tests on Lambdatest ecommerce Website" enabled="false">
        <parameter name="browser" value="remote_chrome_lambdatest"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.lambdatestecommerce.EndToEndWebsiteTests">
                <methods>
                    <include name="testRegisterUser"/>
                    <include name="testAddProductToCart"/>
                    <include name="testCheckoutProduct"/>
                    <include name="testConfirmOrder"/>
                    <include name="testOrderSuccess"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
</suite> <!-- Suite -->