<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="The-internet Website Tests" parallel="tests" thread-count="10" verbose="3">
    <test name="Browser Navigation Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.BrowserTests">
                <methods>
                    <include name="checkTitleAndWebsiteUrlTest"/>
                    <include name="browserNavigationTests"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="JS Alert Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.JSAlertTests">
                <methods>
                    <include name="alertTest"/>
                    <include name="confirmAlertTest"/>
                    <include name="dismissAlertTest"/>
                    <include name="jsPromptTypeAndAcceptTest"/>
                    <include name="jsPromptDismissTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Dropdown Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.DropdownTests">
                <methods>
                    <include name="selectByOptionTest"/>
                    <include name="selectByIndexText"/>
                    <include name="selectByValueTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Checkboxes Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.CheckboxTests">
                <methods>
                    <include name="testCheckboxes"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Right Click Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.RightClickTests">
                <methods>
                    <include name="testRightClick"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Form Authentication Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.FormAuthenticationTests">
                <methods>
                    <include name="userNameNotValidTest"/>
                    <include name="passwordNotValidTest"/>
                    <include name="invalidLoginCredentialsTest"/>
                    <include name="blankUserAndPasswordTest"/>
                    <include name="loginTests"/>
                    <include name="loginWithCorrectCredentials"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="KeyPress Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.KeyPressTests">
                <methods>
                    <include name="keyPressTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Mouse Hover Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.HoverTests">
                <methods>
                    <include name="mouseHoverTests"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Drag and Drop Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.crossbrowsertesting.DragAndDropTests">
                <methods>
                    <include name="testDragAndDrop"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Double Click on Button Tests" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.demoqa.DoubleClickTests">
                <methods>
                    <include name="testDoubleClick"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="iFrame Tests" enabled="false"> <!--Disabled as the demo web page has errors and does not allow to type in the frame-->
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.IFrameTests">
                <methods>
                    <include name="testIFrame"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="File Upload and Download Tests" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.FileUploadDownloadTest">
                <methods>
                    <include name="testFileDownload"/>
                    <include name="testFileUpload"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Multiple Windows Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.MultipleWindowTests">
                <methods>
                    <include name="testMultipleWindows"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Data table Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.DataTableTests">
                <methods>
                    <include name="testDataTable"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Chrome Devtools Tests">
        <classes>
            <class name="io.github.mfaisalkhatri.tests.devtools.LogTest"/>
        </classes>
    </test>
    <test name="Digest Authentication tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.tests.theinternet.DigestAuthTest"/>
        </classes>
    </test>
</suite>