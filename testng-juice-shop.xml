<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Juice shop Website Tests " parallel="tests" thread-count="4">
    <test name="Juice Shop end to End automation tests ">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.mfaisalkhatri.juiceshop.JuiceShopTests">
                <methods>
                    <include name="registerUserTest"/>
                    <include name="loginTest"/>
                    <include name="addProductToCartTest"/>
                    <include name="productCheckoutTest"/>
                    <include name="selectDeliveryTest"/>
                    <include name="makePaymentTest"/>
